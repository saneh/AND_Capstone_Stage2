<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/workout_video_image_preview"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/cd_iv_workout_video_image_preview"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_play_video"
        android:src="@drawable/ic_play_workout_video"
        app:layout_constraintTop_toBottomOf="@+id/workout_video_image_preview"
        app:layout_constraintBottom_toTopOf="@+id/workout_video_image_preview"
        app:layout_constraintRight_toLeftOf="@+id/workout_video_image_preview"
        app:layout_constraintLeft_toRightOf="@+id/workout_video_image_preview"
        android:contentDescription="@string/cd_ic_play_video"/>

</android.support.constraint.ConstraintLayout>