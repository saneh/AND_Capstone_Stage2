<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sw_workout_category"
        style="@style/workout_category_style"
        tools:text="Cardio" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_workouts"
        style="@style/cardview_workout_list_style"
        android:contentDescription="@string/card_view_set_workout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sw_workout_name"
                style="@style/workout_name_style"
                tools:text="Cycling" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_sw_distance"
                    style="@style/et_workout_detail_set_workout_style"
                    android:hint="@string/distance" />

                <EditText
                    android:id="@+id/et_sw_weight"
                    style="@style/et_workout_detail_set_workout_style"
                    android:hint="@string/weight" />

                <EditText
                    android:id="@+id/et_sw_time"
                    style="@style/et_workout_detail_set_workout_style"
                    android:hint="@string/time" />

                <EditText
                    android:id="@+id/et_sw_reps"
                    style="@style/et_workout_detail_set_workout_style"
                    android:hint="@string/reps" />

                <ImageView
                    android:id="@+id/iv_sw_add_remove_workout"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_add_workout"
                    android:textAlignment="center"
                    android:contentDescription="@string/cd_iv_add_remove_workouts"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>