<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_main_workout_category"
        style="@style/workout_category_style"
        tools:text="Cardio" />

    <android.support.v7.widget.CardView
        android:id="@+id/main_cardView_workouts"
        style="@style/cardview_workout_list_style"
        android:contentDescription="@string/workout_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_workout_name"
                style="@style/workout_name_style"
                tools:text="Cycling" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_distance"
                    style="@style/tv_workout_detail_main_activity"
                    tools:text="100 METERS" />

                <TextView
                    android:id="@+id/tv_main_weight"
                    style="@style/tv_workout_detail_main_activity"
                    tools:text="10 KG" />

                <TextView
                    android:id="@+id/tv_main_time"
                    style="@style/tv_workout_detail_main_activity"
                    tools:text="20 MIN" />

                <TextView
                    android:id="@+id/tv_main_reps"
                    style="@style/tv_workout_detail_main_activity"
                    tools:text="30 REPETITIONS" />

                <ImageView
                    android:id="@+id/iv_main_is_workout_complete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:src="@drawable/ic_add_workout"
                    android:elevation="2dp"
                    android:contentDescription="@string/cd_iv_isWorkoutComplete"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>


